#!/bin/bash

# safer than rm. create date-based folder in trash and move things there.

TRASH=$HOME/.Trash
[[ -e "$TRASH" ]] || mkdir -p $TRASH

[[ -e "$dest" ]] || mkdir -v $dest
until [ "$#" = "0" ];do
    # dest inside loop to avoid collisions on multiple folders
    dest=$TRASH/$(/bin/date +%Y%m%d:%H%M%S.%N)
    # echo mv -v "$1" "$dest"
    mv -v "$1" "$dest"
    shift
done
